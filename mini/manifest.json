{
  "manifest_version": 3,
  "name": "Lodestone Achievements Mini",
  "version": "1.0.0",
  "description": "ロードストーンのキャラクターページにアチーブメント確認ボタンを追加します",
  "permissions": [],
  "host_permissions": [
    "https://*.finalfantasyxiv.com/lodestone/character/*",
    "https://www.lalachievements.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.finalfantasyxiv.com/lodestone/character/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
